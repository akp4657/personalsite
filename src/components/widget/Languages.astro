---
import ImageWrapper from '../misc/ImageWrapper.astro'
import { Icon } from 'astro-icon/components'
import { languageConfig } from '../../config'
import { url } from '../../utils/url-utils'

const config = languageConfig
---
<div class="card-base p-3">
    <div class="px-2">
        <div class="font-bold text-xl text-center mb-1 dark:text-neutral-50 transition">{config.name}</div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>
        <div class="flex gap-2 justify-center mb-1">
            {config.icons.length > 1 && config.icons.map(item =>
                    <a rel="me" aria-label={item.name} target="_blank" class="btn-regular rounded-lg h-10 w-10 active:scale-90">
                        <Icon name={item.icon} class="text-[1.5rem]"></Icon>
                    </a>
            )}
            {config.icons.length == 1 && <a rel="me" aria-label={config.icons[0].name} href={config.icons[0].url} target="_blank"
                                            class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                <Icon name={config.icons[0].icon} class="text-[1.5rem]"></Icon>
                {config.icons[0].name}
            </a>}
        </div>
    </div>
</div>

